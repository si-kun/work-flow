generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id // supabaseのuser id を使用
  email      String   @unique
  name       String
  department String
  position    String
  joinDate   DateTime
  isActive   String   @default("Employment")
  role       Role     @default(EMPLOYEE)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum Role {
  ADMIN
  MANAGER
  EMPLOYEE
}
